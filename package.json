  "dependencies": {
    "@nestjs/common": "^7.2",
    "@nestjs/core": "^7.2",
    "@nestjs/graphql": "^7.4",
    "@nestjs/platform-express": "^7.2",
    "@nestjs/platform-fastify": "^7.2",
    "apollo-server-fastify": "^2.15",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12",
    "graphql": "^15.1",
    "graphql-tools": "^6.0",
    "nanoid": "^3.1",
    "reflect-metadata": "^0.1",
    "rimraf": "^3.0",
    "rxjs": "^6.5",
    "slugify": "^1.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4",
    "@nestjs/schematics": "^7.0",
    "@nestjs/testing": "^7.2",
    "@types/express": "^4.17",
    "@types/jest": "26.0",
    "@types/node": "^14.0",
    "@types/supertest": "^2.0",
    "@typescript-eslint/eslint-plugin": "^3.3",
    "@typescript-eslint/parser": "^3.3",
    "eslint": "^7.3",
    "eslint-config-prettier": "^6.11",
    "eslint-plugin-import": "^2.21",
    "jest": "^26.0",
    "prettier": "^2.0",
    "supertest": "^4.0",
    "ts-jest": "26.1",
    "ts-loader": "^7.0",
    "ts-node": "^8.10",
    "tsconfig-paths": "^3.9",
    "typescript": "^3.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
